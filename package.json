{
  "name": "script-reference",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "setup": "yarn && git clone https://github.com/Raid-Gaming/script-reference-api api && cd api && yarn",
    "serve": "vue-cli-service serve",
    "build": "yarn build:api && yarn build:app",
    "build:app": "vue-cli-service build",
    "build:api": "rimraf ./public/api && cd api && yarn build && cd .. && mv ./api/dist ./public/api",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@vueuse/core": "^4.0.0-rc.8",
    "axios": "^0.21.0",
    "axios-cache-adapter": "^2.5.0",
    "clear": "^0.1.0",
    "core-js": "^3.8.1",
    "fuzzysort": "^1.1.4",
    "highlight.js": "^10.4.1",
    "mitt": "^2.1.0",
    "normalize.css": "^8.0.1",
    "register-service-worker": "^1.7.2",
    "vue": "^3.0.4",
    "vue-i18n": "^9.0.0-beta.11",
    "vue-router": "^4.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "@vue/cli-plugin-babel": "~4.5.9",
    "@vue/cli-plugin-eslint": "~4.5.9",
    "@vue/cli-plugin-pwa": "~4.5.9",
    "@vue/cli-plugin-router": "~4.5.9",
    "@vue/cli-plugin-typescript": "~4.5.9",
    "@vue/cli-service": "~4.5.9",
    "@vue/compiler-sfc": "^3.0.4",
    "@vue/eslint-config-airbnb": "^5.3.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-vue": "^7.2.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sass": "^1.30.0",
    "sass-loader": "^10.1.0",
    "typescript": "^4.1.2"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "prettier --write",
      "vue-cli-service lint --fix",
      "git add"
    ]
  }
}
